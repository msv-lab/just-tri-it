TEXFILES := $(wildcard *.tex)
PDFS := $(TEXFILES:.tex=.pdf)

LATEXMK := latexmk
LATEXMKFLAGS := -shell-escape -pdf

.PHONY: all clean

# Default target: build all PDFs
all: $(PDFS)

# Rule to generate PDFs from TEX files
%.pdf: %.tex
	$(LATEXMK) $(LATEXMKFLAGS) $<

# Clean up auxiliary files generated by LaTeX
clean:
	$(LATEXMK) -c
	rm -f $(PDFS)
